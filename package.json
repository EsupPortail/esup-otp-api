  },
  "devDependencies": {
    "@types/qrcode": "1.x",
    "@types/restify": "8.x",
    "@types/restify-errors": "^4.3.9",
    "@types/supertest": "6.x",
    "eslint": "8.x",
    "mongodb-memory-server": "10.x",
    "supertest": "7.x"
  },
  "scarfSettings": {
    "enabled": false
  }
